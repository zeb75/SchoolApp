@model IEnumerable<SchoolApp.Models.Teacher>

@{
    ViewBag.Title = "RemoveTeacher";
}

<h2>Remove teacher from course</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Remove", "RemoveTeacherFromCourse", new { tId = item.Id, cId = ViewBag.cId })
        </td>
    </tr>
}

</table>
